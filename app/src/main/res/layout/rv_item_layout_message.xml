<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:weightSum="10"
    >

    <!-- User photo -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_photo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        />

    <!-- User's name + Start of the conversation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_marginStart="10sp"
        >

        <TextView
            android:id="@+id/message_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/message_last_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMountainMist"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:minLines="1"
            android:maxLines="1"
            />

    </LinearLayout>

    <!-- Time of the last message -->
    <TextView
        android:id="@+id/message_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:fontFamily="Helvetica Neue"
        android:text="@string/example_hour"
        android:textSize="15sp"
        android:textColor="@color/colorMountainMist"
        android:gravity="center_horizontal"
        android:layout_marginEnd="10sp"
        />

</LinearLayout>