<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/colorWhite"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                />

            <!-- Check institute data -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:id="@+id/id_check_institute"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/id_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:minLines="1"
                    android:maxLines="1"
                    android:layout_marginStart="15dp"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/ic_arrow_right"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                />

            <!-- Create volunteer offer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:id="@+id/id_create_volunteer_offer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="@string/btn_createVolunteerOffer"
                    android:textColor="@color/colorBlack"
                    android:minLines="1"
                    android:maxLines="1"
                    android:layout_marginStart="15dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                />

            <!-- Create demand for the volunteers -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                />

            <LinearLayout
                android:id="@+id/id_create_institute_demand"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="@string/btn_createDemand"
                    android:textColor="@color/colorBlack"
                    android:minLines="1"
                    android:maxLines="1"
                    android:layout_marginStart="15dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                />

            <!-- Check chat -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:id="@+id/id_check_chat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="@string/btn_checkChat"
                    android:textColor="@color/colorBlack"
                    android:minLines="1"
                    android:maxLines="1"
                    android:layout_marginStart="15dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                />

            <!-- Manage participants -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:id="@+id/id_manage_participants"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="@string/btn_manageParticipants"
                    android:textColor="@color/colorBlack"
                    android:minLines="1"
                    android:maxLines="1"
                    android:layout_marginStart="15dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMountainMist"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>