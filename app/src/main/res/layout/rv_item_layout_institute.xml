<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/config_ll_volunteer_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMountainMist"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_marginStart="15dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/config_user_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/institute_photo"
            />

        <TextView
            android:id="@+id/config_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:text="@string/example_institute"
            android:minLines="1"
            android:maxLines="1"
            android:layout_marginStart="15dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:src="@drawable/ic_arrow_right"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorMountainMist"
        />

</LinearLayout>